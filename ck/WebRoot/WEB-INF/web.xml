<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>ck</display-name>	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <!-- log4j 监听器 -->
  <listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <listener>
    <listener-class>com.will.init.SystemPropertiesLoader</listener-class>
  </listener>
  <servlet>
    <servlet-name>AppDispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
                /WEB-INF/config/spring/applicationContext-core-tomcat.xml
            </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
 <servlet>
	  <servlet-name>InitLog4jServlet</servlet-name>
	  <servlet-class>com.will.init.InitLog4jServlet</servlet-class>
	  <load-on-startup>2</load-on-startup>
 </servlet>
  <servlet-mapping>
    <servlet-name>AppDispatcher</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppDispatcher</servlet-name>
    <url-pattern>*.json</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppDispatcher</servlet-name>
    <url-pattern>*.jsf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppDispatcher</servlet-name>
    <url-pattern>*.ws</url-pattern>
  </servlet-mapping>
</web-app>
